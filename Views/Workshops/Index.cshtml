@model Lab3.Models.Rsvp

@{
    ViewData["Title"] = "Workshop RSVP";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    
    <p class="lead mt-4">
        Create an RSVP for whichever workshop you wish to attend!
    </p>
    
    <div class="alert alert-info" role="alert">
		<strong>How it works:</strong> Type in your full name,and the enter the name of the workshop you'd like to attend. If you need any special accommodations, check the box.
    </div>
    
    <div class="mt-4">
        <a href="@Url.Action("RsvpForm", "Workshops")" class="btn btn-primary btn-lg">
            Create RSVP
        </a>
        <a href="@Url.Action("Registrations", "Workshops")" class="btn btn-secondary btn-lg ms-2">
            View RSVPs
        </a>
    </div>
</div>