@model List<Lab3.Models.Rsvp>

@{
    ViewData["Title"] = "All Registrations";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No registrations yet.
        </div>
    }
    else
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Workshop Title</th>
                    <th>Needs Accommodation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var registration in Model)
                {
                    <tr>
                        <td>@registration.FullName</td>
                        <td>@registration.WorkshopTitle</td>
                        <td>@(registration.NeedsAccommodation ? "Yes" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Workshops")" class="btn btn-primary">Back to Workshops</a>
    </div>
</div>