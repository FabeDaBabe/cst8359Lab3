@model Lab3.Models.Rsvp

@{
    ViewData["Title"] = "RSVP Form";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Confirm" asp-controller="Workshops" method="post" class="mt-4">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="WorkshopTitle" class="form-label"></label>
            <input asp-for="WorkshopTitle" class="form-control" placeholder="Enter workshop title" />
            <span asp-validation-for="WorkshopTitle" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="NeedsAccommodation" type="checkbox" class="form-check-input" />
            <label asp-for="NeedsAccommodation" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Submit RSVP</button>
        <a href="@Url.Action("Index", "Workshops")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}